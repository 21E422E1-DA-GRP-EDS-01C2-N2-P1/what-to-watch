<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_selector"
    tools:context=".ui.fragment.SignupFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/editTextSignupEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/layout_shadown_white"
                android:ems="10"
                android:hint="   Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextSignupSenha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:width="24dp"
                android:height="24dp"
                android:background="@drawable/layout_shadown_white"
                android:ems="10"
                android:hint="   Senha"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editTextSignupRepitaSenha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:width="24dp"
                android:height="24dp"
                android:background="@drawable/layout_shadown_white"
                android:ems="10"
                android:hint="   Repita a senha"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnSignupCadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/layout_shadown_blue"
                android:backgroundTint="@color/colorDarkBlue"
                android:elevation="2dp"
                android:shadowColor="#40000000"
                android:text="Cadastrar"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textViewSignupLogar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="JÃ¡ possui cadastro? Acesse por aqui"
                android:textAlignment="center"
                android:textColor="@color/colorDarkBlue" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>