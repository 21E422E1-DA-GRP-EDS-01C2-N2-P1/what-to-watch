<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_selector"
    tools:context=".AboutFragment" >

    <ImageView
        android:id="@+id/imgViewAbout"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewTituloAbout"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_marginTop="92dp"
        android:text="Não sabe o que ler a seguir?"
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewAbout" />

    <TextView
        android:id="@+id/txtViewTextoAbout"
        android:layout_width="279dp"
        android:layout_height="141dp"
        android:text="A What to Read ajuda você a escolher os livros que mais têm a ver com seus gostos."
        android:textAlignment="center"
        android:textColor="@color/colorDarkBlue"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewTituloAbout"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/txtViewFooterAbout"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:text="Desenvolvido por:\n-Ana Carolina Melo\n-BrunoCister\n-Bruno Ferreira\n-Jennifer Omena"
        android:textColor="@color/colorDarkBlue"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewTextoAbout"
        app:layout_constraintVertical_bias="0.921" />

</androidx.constraintlayout.widget.ConstraintLayout>