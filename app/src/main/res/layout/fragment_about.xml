<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_selector"
    tools:context=".AboutFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgViewAbout"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/txtViewTituloAbout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="92dp"
                android:text="Não sabe o que ler a seguir?"
                android:textAlignment="center"
                android:textColor="@color/colorDarkBlue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtViewTextoAbout"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:text="A What to Read ajuda você a escolher os livros que mais têm a ver com seus gostos."
                android:textAlignment="center"
                android:textColor="@color/colorDarkBlue"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtViewFooterAbout"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:text="Desenvolvido por:\n-Ana Carolina Melo\n-Bruno Cister\n-Bruno Ferreira\n-Jennifer Omena"
                android:textColor="@color/colorDarkBlue"
                android:textSize="14dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>