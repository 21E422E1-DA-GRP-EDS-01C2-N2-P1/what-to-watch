<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:top="5dp">
                <shape>
                    <corners
                        android:radius="3dp" />
                    <solid
                        android:color="#40000000" />
                </shape>
            </item>
            <item android:bottom="4dp" >
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/colorMediumBlue"
                        android:startColor="@color/colorMediumBlue" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorMediumBlue" />
                    <corners
                        android:radius="4dp" />
                    <padding
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>